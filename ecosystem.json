{
  "apps": [
    {
      "name": "sequelized",
      "max_memory_restart": "1G",
      "script": "./bin/www_http",
      "instances": 4,
      "exec_mode": "cluster",
      "watch": true,
      "node_args": "--harmony",
      "_comment": {
        "out_file": "./logs/http/nova_out.log",
        "error_file": "./logs/http/nova_error.log",
        "env": {
          "NODE_ENV": "production"
        },
        "watch_options": {
          "usePolling": true
        }
      }
    }
  ]
}
